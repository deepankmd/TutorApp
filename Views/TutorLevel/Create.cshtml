@model TutorLevel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.LevelShortName, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.LevelShortName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.LevelShortName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LevelName, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.LevelName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.LevelName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}
