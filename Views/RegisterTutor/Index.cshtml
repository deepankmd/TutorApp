                                                                        <div class="form-check form-check-inline">
                                                                            <input class="form-check-input" type="checkbox" name="selectedSubjects" value="@subject._id.ToString()" id="subject@(subject._id)">
                                                                            <label class="form-check-label" for="subject@(subject._id)">
                                                                                @subject.Name
                                                                            </label>
                                                                        </div>
                                                                    }
                                                                </div>

