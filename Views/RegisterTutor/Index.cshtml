        if (validateForm()) {
            stepper.next(); // Proceed to the next step
        } else {
            document.querySelector(".is-invalid").scrollIntoView({ behavior: "smooth" });
        }
    };

    function validateForm() {
        let isValid = true;

        document.querySelectorAll("[required]").forEach(function (input) {
            if (!input.value.trim()) {
                isValid = false;
                input.classList.add("is-invalid");
                input.nextElementSibling.textContent = "This field is required";
            } else {
                input.classList.remove("is-invalid");
                input.nextElementSibling.textContent = "";
            }

            if (input.type === "email" && input.value.trim()) {
                {
                    input.classList.remove("is-invalid");
                    input.nextElementSibling.textContent = "";
                }
            }

            if (input.name === "AccountInfo.PasswordConfirm") {
                const password = document.querySelector("[name='AccountInfo.Password']").value.trim();
                if (input.value.trim() !== password) {
                    isValid = false;
                    input.classList.add("is-invalid");
                    input.nextElementSibling.textContent = "Password and Confirm Password do not match";
                } else {
                    input.classList.remove("is-invalid");
                    input.nextElementSibling.textContent = "";
                }
            }
        });

        return isValid;
    }

</script>