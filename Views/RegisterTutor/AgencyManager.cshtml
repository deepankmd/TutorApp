                                    <div class="form-group">
                                        <label asp-for="SchoolGrade">Schools:</label>
                                        <select id="SchoolGrade@(tutorgrade._id)" name="TutorSchools" asp-for="SchoolGrade" class="form-control select2" multiple="multiple" data-placeholder="Select a School" required>
