@model Assignment

@{
    Layout = "~/Views/Shared/_LayoutWithoutAnyMenu.cshtml";
    ViewData["Title"] = "Create Assignment";
}
<h6>Create Assignment</h6>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription">Short Description</label>
        <input asp-for="ShortDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SubjectLooking">Subject Looking</label>
        <input asp-for="SubjectLooking" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="WorkingType">Working Type</label>
        <input asp-for="WorkingType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <select asp-for="Location" class="form-control">
            <option value="North">North</option>
            <option value="South">South</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
