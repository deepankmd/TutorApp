@model Assignment

@{
    Layout = "~/Views/Shared/_LayoutWithoutAnyMenu.cshtml";
    ViewData["Title"] = "Edit Assignment";
}

<h2>Edit Assignment</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="_id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription"></label>
        <input asp-for="ShortDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SubjectLooking"></label>
        <input asp-for="SubjectLooking" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="WorkingType"></label>
        <input asp-for="WorkingType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <select asp-for="Location" class="form-control">
            <option value="North">North</option>
            <option value="South">South</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
